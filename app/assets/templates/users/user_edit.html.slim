                  .field-error ng-show="editAddressForm.first_name.$error.pattern"
                    ' {{ "ERROR_FIRST_NAME_PATTERN" | translate }}
                  .field-error ng-show="editAddressForm.first_name.$error.minlength"
                    ' {{ "ERROR_FIRST_NAME_SHORT" | translate }}
                  .field-error ng-show="editAddressForm.first_name.$error.maxlength"
                    ' {{ "ERROR_FIRST_NAME_LONG" | translate }}

              .field
                input.form-control.span12(type="text" maxlength="30" name="last_name" placeholder="{{ 'LAST_NAME_PLACEHOLDER' | translate }}" ng-model="formData.address.last_name" required ng-pattern="/^[a-zA-ZàáâäãåąčćęèéêëėįìíîïłńòóôöõøùúûüųūÿýżźñçčšžÀÁÂÄÃÅĄĆČĖĘÈÉÊËÌÍÎÏĮŁŃÒÓÔÖÕØÙÚÛÜŲŪŸÝŻŹÑßÇŒÆČŠŽ∂ð ,.'-]+$/" ng-minlength='3' ng-maxlength='30')

