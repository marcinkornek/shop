                  .field-error ng-show="editAddressForm.last_name.$error.pattern"
                    ' {{ "ERROR_LAST_NAME_PATTERN" | translate }}
                  .field-error ng-show="editAddressForm.last_name.$error.minlength"
                    ' {{ "ERROR_LAST_NAME_SHORT" | translate }}
                  .field-error ng-show="editAddressForm.last_name.$error.maxlength"
                    ' {{ "ERROR_LAST_NAME_LONG" | translate }}

              .field
                input.form-control.span12(type="text" maxlength="9" name="tel_num" placeholder="{{ 'TEL_NUM_PLACEHOLDER' | translate }}" ng-model="formData.address.tel_num" ng-pattern="/\d{9}/" ng-minlength='9' required)

                .errors ng-show="editAddressForm.tel_num.$touched && editAddressForm.tel_num.$dirty"
                  .field-error ng-show="editAddressForm.tel_num.$error.required"
                    ' {{ "ERROR_TEL_NUM_REQUIRED" | translate }}
                  .field-error ng-show="editAddressForm.tel_num.$error.minlength"
                    ' {{ "ERROR_TEL_NUM_SHORT" | translate }}
                  .field-error ng-show="editAddressForm.tel_num.$error.pattern"
                    ' {{ "ERROR_TEL_NUM_PATTERN" | translate }}

              .field
                input.form-control.span12(type="text" name="town" ng-model="formData.address.town" placeholder="{{ 'TOWN_PLACEHOLDER' | translate }}" typeahead="address for address in getLocation($viewValue)" typeahead-loading="loadingLocations" required)

                .errors ng-show="editAddressForm.town.$touched && editAddressForm.town.$dirty"
                  .field-error ng-show="editAddressForm.town.$error.required"
                    ' {{ "ERROR_TOWN_REQUIRED" | translate }}

              .field
                input.form-control.span12(type="text" maxlength="40" name="street" placeholder="{{ 'STREET_PLACEHOLDER' | translate }}" ng-model="formData.address.street" required ng-pattern="/^[a-zA-ZàáâäãåąčćęèéêëėįìíîïłńòóôöõøùúûüųūÿýżźñçčšžÀÁÂÄÃÅĄĆČĖĘÈÉÊËÌÍÎÏĮŁŃÒÓÔÖÕØÙÚÛÜŲŪŸÝŻŹÑßÇŒÆČŠŽ∂ð ,.'-]+$/" ng-minlength='3' ng-maxlength='40')

                .errors ng-show="editAddressForm.street.$touched && editAddressForm.street.$dirty"
                  .field-error ng-show="editAddressForm.street.$error.required"
                    ' {{ "ERROR_STREET_REQUIRED" | translate }}
                  .field-error ng-show="editAddressForm.street.$error.pattern"
                    ' {{ "ERROR_STREET_PATTERN" | translate }}
                  .field-error ng-show="editAddressForm.street.$error.minlength"
                    ' {{ "ERROR_STREET_SHORT" | translate }}
                  .field-error ng-show="editAddressForm.street.$error.maxlength"
                    ' {{ "ERROR_STREET_LONG" | translate }}

              .field
                input.form-control.span12(type="text" maxlength="6" name="postcode" placeholder="{{ 'POSTCODE_PLACEHOLDER' | translate }}" ng-model="formData.address.postcode" ng-pattern="/\d{2}-\d{3}/" ng-minlength='6' required)

                .errors ng-show="editAddressForm.postcode.$touched && editAddressForm.postcode.$dirty"
                  .field-error ng-show="editAddressForm.postcode.$error.required"
                    ' {{ "ERROR_POSTCODE_REQUIRED" | translate }}
                  .field-error ng-show="editAddressForm.postcode.$error.pattern"
                    ' {{ "ERROR_POSTCODE_PATTERN" | translate }}
                  .field-error ng-show="editAddressForm.postcode.$error.minlength"
                    ' {{ "ERROR_POSTCODE_SHORT" | translate }}

              .field
                input.form-control.span12(type="text" maxlength="9" name="house_num" placeholder="{{ 'HOUSE_NUM_PLACEHOLDER' | translate }}" ng-model="formData.address.house_num" ng-pattern="/^\d{1,4}([a-z]{1})?((-|\/)\d{1,4})?([a-z]{1})?$/" required)

                .errors ng-show="editAddressForm.house_num.$touched && editAddressForm.house_num.$dirty"
                  .field-error ng-show="editAddressForm.house_num.$error.required"
                    ' {{ "ERROR_HOUSE_NUM_REQUIRED" | translate }}
                  .field-error ng-show="editAddressForm.house_num.$error.pattern"
                    ' {{ "ERROR_HOUSE_NUM_PATTERN" | translate }}

              button.btn.btn-default(style='width:100%;margin-top:10px;' ng-click="editAddress(formData.address.id)")
                ' {{ "USER_EDIT_UPDATE" | translate }}
